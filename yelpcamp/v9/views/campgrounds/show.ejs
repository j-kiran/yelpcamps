<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelpcamp</p>
            <ul class="list-group">
                <li class="list-group-item active">category 1</li>
                <li class="list-group-item">category 2</li>
                <li class="list-group-item">category 3</li>

            </ul>
        </div>
        <div class="col-md-9">
           <div class="img-thumbnail">
            <img class="img-responsive" src="<%=campground.image %>" >
            <div class="caption">
                <h4 class="float-right">$9.14/night</h4>
                <h4><a><%= campground.name%></a></h4>   
                    <p><%=campground.description%></p>
                    <p>
                       <em>submitted by <%=campground.author.username%></em>
                    </p>
                    <div>
                        <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                   <a class="btn btn-warning btn-sm" href="/campgrounds/<%=campground.id%>/edit">Edit campground</a>
                   <form id="delete-form" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm">Delete campground</button>
                    </form>
                        <% } %>
                    </div>
                    
            </div>
            </div>
            <hr>
            <div class="card bg-light">             
               <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class=" col-md-12">
                        <div class="orange">

                           <strong><%=comment.author.username%></strong>
                           <span class=" float-right">10 days ago</span>
                           <P> <%= comment.text%> </P>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                           <a class="btn btn-warning btn-xs" href="/campgrounds/<%= campground._id%>/comment/<%=comment._id%>/edit">Edit</a>
                           <form class="delete-form" action="/campgrounds/<%= campground.id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
                               <button class="btn btn-danger btn-xs">Delete</button>
                           </form>
                           <% } %>
                          </div> 
                        </div>
                    </div>
                    
                  <% }) %>
                   <div class="Add" >
                    <a class="float-right btn btn-primary btn-sm" href="/campgrounds/<%=campground.id%>/comments/new">Add new comment</a>
                    </div>
            </div>
            
        </div>
    </div>
</div>

    
    
   

    <p>
    </p>
<% include ../partials/footer%>
